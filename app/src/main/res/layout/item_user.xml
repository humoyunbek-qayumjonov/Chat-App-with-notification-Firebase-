<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="30dp"
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"

                    >
                    <ImageView
                        android:id="@+id/image_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ryanna"
                        android:background="@drawable/rasm"
                        android:scaleType="centerCrop"
                        />

                </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <TextView
        android:id="@+id/name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Name"
        android:maxLines="1"
        app:layout_constraintRight_toLeftOf="@id/recycler_date_tv"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toRightOf="@id/image_layout"
        app:layout_constraintTop_toTopOf="@id/image_layout" />

    <TextView
        android:id="@+id/emile_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:maxLines="1"
        app:layout_constraintLeft_toRightOf="@id/image_layout"
        app:layout_constraintBottom_toBottomOf="@id/image_layout" />
    <TextView
        android:id="@+id/recycler_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/image_layout"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:id="@+id/image_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/onof"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@id/image_layout"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintVertical_bias="0.9"
        />

</androidx.constraintlayout.widget.ConstraintLayout>